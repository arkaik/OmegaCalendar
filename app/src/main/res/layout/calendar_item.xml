<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="48dp"
    android:layout_width="wrap_content" >

    <LinearLayout
        android:id="@+id/color_ll"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/calItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/color_ll"
        android:hint="Nombre del calendario"
        android:layout_toStartOf="@+id/calButton"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="4dp" />

    <ImageButton
        android:id="@+id/calButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_calendar_multiple_black_24dp"
        android:contentDescription="Calendar Button"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true" />

</RelativeLayout>