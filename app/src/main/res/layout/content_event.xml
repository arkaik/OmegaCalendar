<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.falc.omegacalendar.EventActivity"
    tools:showIn="@layout/activity_event">

    <EditText
        android:id = "@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del evento"
        android:layout_alignParentEnd="true" />
    <EditText
        android:id="@+id/desc_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del evento"
        android:layout_below="@+id/name_field"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/time1_field"
        android:focusable="false"
        android:hint="Tiempo1"
        android:layout_below="@+id/desc_field"
        android:layout_alignEnd="@+id/desc_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date1_field"
        android:hint="Fecha1"
        android:focusable="false"
        android:layout_alignTop="@+id/time1_field"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/time1_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/time2_field"
        android:hint="Tiempo2"
        android:focusable="false"
        android:layout_below="@+id/time1_field"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date2_field"
        android:hint="Fecha2"
        android:focusable="false"
        android:layout_below="@+id/date1_field"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/time1_field" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir nueva tarea"
        android:id="@+id/taskevbutton"
        android:layout_below="@+id/time2_field"
        android:layout_alignParentStart="true"
        android:singleLine="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasklistView"
        android:layout_below="@+id/taskevbutton"
        android:layout_alignParentStart="true" />


</RelativeLayout>
